<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    
    <parameters>
        <parameter key="zebba_filter.handler_factory.class">Zebba\Bundle\FilterBundle\Factory\FilterHandlerFactory</parameter>
        <parameter key="zebba_filter.manager_factory.class">Zebba\Bundle\FilterBundle\Factory\FilterManagerFactory</parameter>
    </parameters>
    
    <services>
        <service id="zebba_filter.service.logger" alias="logger.null_logger" />
   
        <service id="logger.null_logger" public="false"
            class="Psr\Log\NullLogger" />
   
        <service id="zebba_filter.service.form_factory" alias="form.factory" />
        <service id="zebba_filter.service.object_manager" alias="doctrine.orm.entity_manager" />
        <service id="zebba_filter.service.annotation_reader" alias="annotation_reader" />
        <service id="zebba_filter.service.session" alias="session" />
   
    
        <service id="zebba_filter.handler_factory"
            class="%zebba_filter.handler_factory.class%">
            <argument type="service" id="zebba_filter.service.form_factory">%%</argument>
            <argument type="service" id="zebba_filter.service.logger">%%</argument>
        </service>
        
        <service id="zebba_filter.manager_factory"
            class="%zebba_filter.manager_factory.class%">
            <argument type="service" id="zebba_filter.service.object_manager" />
            <argument type="service" id="zebba_filter.service.annotation_reader" />
            <argument type="service" id="zebba_filter.service.session" />
            <argument type="service" id="zebba_filter.service.logger" />
        </service>
    </services>
</container>
